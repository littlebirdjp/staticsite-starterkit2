//------------------------------------------
//- defalt variables
//------------------------------------------
- var title             = 'Site Title';//-meta title
- var description       = '';//-meta description
- var keywords          = '';//-meta keywords
- var og_url            = '';//-og url
- var og_type           = 'website';//-og type
- var og_title          = '';//-og title
- var og_image          = '';//-og image
- var og_description    = '';//-og description
- var bodyClass         = '';//-body class
- var rootPath          = './'//-root path

//- override default variables
block var_block

doctype html
html(lang="ja")
    head
        meta(charset="utf-8")
        meta(name="viewport", content="width=device-width, initial-scale=1")
        title #{title}
        meta(name="description", content="#{description}")
        meta(name="keywords", content="#{keywords}")
        meta(name="og:url", content="#{og_url}")
        meta(name="og:type", content="#{og_type}")
        meta(name="og:title", content="#{og_title}")
        meta(name="og:image", content="#{og_image}")
        meta(name="og:description", content="#{og_description}")

        block headCSS
        link(rel="stylesheet", href="#{rootPath}css/style.css")

        script(src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js")

        block headJS

    body(class="#{bodyClass}")

        .wrapper

            block header_block
            include _header

            .contents
                block contents_block

            block footer_block
            include _footer


